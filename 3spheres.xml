<?xml version="1.0" encoding="utf-8"?>

<!-- Scene Description in XML -->
<scene desc="Simple Test Scene - Triangle + Sphere. Based on test.ray by Mark Tomczak"
	   author="Raphael Mun">
	<!-- Background Color and Ambient Light Property -->
	<background>
		<color red="0.0" green="0.0" blue="1.0"/>
		<ambientLight red="0.1" green="0.1" blue="0.1"/>
	</background>

	<!-- Camera Description -->
	<camera fieldOfView="45.0" nearClip="0.1" farClip="100.0">
		<position x="1.5" y="2.0" z="6.0"/>
		<target x="1.5" y="0" z="-1.0"/>
		<up x="0.0" y="1.0" z="0.0"/>
	</camera>

	<!-- Light Sources Collection -->
	<light_list>
		<!-- Light Description, Color & Position -->
		<light>
			<color red="1.0" green="1.0" blue="1.0"/>
			<position x="-5.0" y="3.0" z="0.5"/>
			<attenuation constant="0.15" linear="0.03" quadratic="0.00"/>
		</light>
	</light_list>

	<!-- Material Type Collection -->
	<material_list>
		<!-- Material Descriptions -->
		<material name="Purple">
			<texture filename="ejemplo.jpg"/>
			<diffuse red="0.5" green="0.0" blue="0.5"/>
			<specular red="0.1" green="0.00" blue="0.1" shininess="2.0"/>
		</material>
	
		<material name="Mirror">
			<texture filename=""/>
			<diffuse red="0.5" green="0.5" blue="0.5"/>
			<specular red="1.0" green="1.0" blue="1.0" shininess="2.0"/>
			<reflective red="1.0" green="1.0" blue="1.0"/>
		</material>
		
		<!-- Designed for matte -->
		<material name="MatteGray">
			<texture filename=""/>
			<diffuse red="0.5" green="0.5" blue="0.5"/>
			<specular red="0.0" green="0.0" blue="0.0" shininess="2.0"/>
		</material>

		<!-- Designed for plastic -->
		<material name="Red">
			<texture filename=""/>
			<diffuse red="0.8" green="0.2" blue="0.2"/>
			<specular red="1.0" green="0.0" blue="0.0" shininess="5.0"/>
		</material>

		<!-- Designed for reflexive plastic -->
		<material name="White">
			<texture filename=""/>
			<diffuse red="1.0" green="0.0" blue="1.0"/>
			<specular red="1.0" green="1.0" blue="1.0" shininess="20.0"/>
			<transparent red="0.0" green="0.0" blue="0.0"/>
			<reflective red="0.05" green="0.05" blue="0.05"/>
			<refraction_index red="0.0" green="0.0" blue="0.0"/>
		</material>
		
		<!-- Designed for metals -->
		<material name="MetallicGray">
			<texture filename=""/>
			<diffuse red="0.5" green="0.5" blue="0.5"/>
			<specular red="1.0" green="1.0" blue="1.0" shininess="100.0"/>
			<transparent red="0.0" green="0.0" blue="0.0"/>
			<reflective red="1.0" green="1.0" blue="1.0"/>
			<refraction_index red="0.0" green="0.0" blue="0.0"/>
		</material>
	</material_list>

	<!-- List of Scene Objects -->
	<object_list>
		<!-- Sphere Object -->
		<sphere name="Sphere" material="MatteGray" radius="1.0">
			<physicalMaterial name="Matte" />
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>

			<center x="-2.5" y="-1.0" z="-2.0"/>
		</sphere>
		
		<sphere name="Sphere" material="White" radius="1.0">
			<physicalMaterial name="ReflexivePlastic" />
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>

			<center x="0.0" y="2.0" z="-2.0"/>
		</sphere>
		
		<sphere name="Sphere" material="Red" radius="1.0">
			<physicalMaterial name="Plastic" />
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>

			<center x="2.5" y="2.0" z="-2.0"/>
		</sphere>
		
		<sphere name="Sphere" material="MetallicGray" radius="1.0">
			<physicalMaterial name="Metallic" />
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>

			<center x="5.0" y="2.0" z="-2.0"/>
		</sphere>
		
		<triangle name="FloorTriangle1">
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>
			<physicalMaterial name="Mirror" />

			<vertex index="0" material="MetallicGray">
				<position x="-20.0" y="-2.0" z="20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="0.0" v="0.0"/>
			</vertex>

			<vertex index="1" material="MetallicGray">
				<position x="20.0" y="-2.0" z="20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="1.0" v="0.0"/>
			</vertex>

			<vertex index="2" material="MetallicGray">
				<position x="-20.0" y="-2.0" z="-20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="0.0" v="1.0"/>
			</vertex>
		</triangle>
		
		<triangle name="FloorTriangle2">
			<scale x="1.0" y="1.0" z="1.0"/>
			<rotation x="0.0" y="0.0" z="0.0"/>
			<position x="0.0" y="0.0" z="0.0"/>
			<physicalMaterial name="Mirror" />

			<vertex index="0" material="MetallicGray">
				<position x="20.0" y="-2.0" z="20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="1.0" v="0.0"/>
			</vertex>

			<vertex index="1" material="MetallicGray">
				<position x="20.0" y="-2.0" z="-20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="1.0" v="1.0"/>
			</vertex>
			
			<vertex index="2" material="MetallicGray">
				<position x="-20.0" y="-2.0" z="-20.0"/>
				<normal x="0.0" y="1.0" z="0.0"/>
				<texture u="0.0" v="1.0"/>
			</vertex>
		</triangle>
	</object_list>
	
<!-- End of Scene -->
</scene>
